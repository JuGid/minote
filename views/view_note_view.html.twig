{% extends "template.html" %}
{% block head %}
<link href="{{ app.request.basepath }}/lib/css/view_note.css" rel="stylesheet">
<link href="{{ app.request.basepath }}/lib/simplemde/simplemde.min.css" rel="stylesheet">
<style>
  textarea{
    display:none;
  }
  #editor{
    width:100%;
  }
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">MILINKS</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="http://milinks.info/{{url}}/edit">Edit</a></li>
      </ul>
      <p class="navbar-text navbar-center">Note URL : <strong>{{url | raw }}</strong></p>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row">
  <div id="editor" class='container-fluid'>
      <textarea id="content" v-model="input" debounce="300" class="col-xs-6">{{content}}</textarea>
      <div class="col-xs-12" id="render" v-html="input | marked"></div>
  </div>
</div>
{% endblock %}

{% block foot %}
<script src="{{ app.request.basepath }}/lib/js/marked.min.js"></script>
<script src="{{ app.request.basepath }}/lib/js/vue.min.js"></script>
<script>
new Vue({
  el: '#editor',
  data: {
    input: ""
  },
  filters: {
    marked: marked
  }
})
</script>

{% endblock %}